<div class="bg-layer neon-clouds dim"></div>
<div class="bg-layer caustics softer"></div>
<div class="bg-layer bloom-overlay subtle"></div>

{{> nav }}

<section class="games-area fade-in">
  <h2 class="section-title">Choose Your Game</h2>

  <div class="game-grid">
    {{#each games}}
    <div class="game-card glass-card deep">
      <div class="card-img blank"></div>
      <div class="card-body">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
      </div>
      <div class="card-foot">
        <span class="tag">{{tag}}</span>
        <button class="play-btn" data-nav="{{route}}">Play</button>
      </div>
    </div>
    {{/each}}
  </div>

</section>

<footer class="footer-panel glass-subtle">
  <p>21+ • Gamble responsibly • Support • Terms • Privacy</p>
</footer>