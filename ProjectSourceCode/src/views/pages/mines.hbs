{{#each backgroundLayers}}
  <div class="bg-layer {{this}}"></div>
{{/each}}

<nav class="nav-full glass-subtle">
  <div class="nav-logo big" onclick="location.href='/home'" style="cursor:pointer;">
    {{siteName}}
  </div>
  <div class="nav-links">
    <a href="#" class="nav-item">Profile</a>
    <a href="#" class="nav-item">Leaderboard</a>
    <a href="#" class="nav-item wallet">Wallet ▾</a>
  </div>
</nav>

<main class="mines-container fade-in">
  <div class="mines-side glass-card">
    <h2 class="mines-title">MINES</h2>

    <div class="bet-panel">
      <label>Bet Amount</label>
      <input type="number" placeholder="0.00" class="bet-input" />

      <label>Number of Mines</label>
      <input type="number" min="1" max="15" value="3" class="bet-input" />

      <button class="play-btn wide" id="startMinesBtn">Start Game</button>
      <button class="cashout-btn hidden" id="cashoutBtn">Cashout</button>
    </div>
  </div>

  <div class="mines-grid glass-card">
    <div id="minesGrid"></div>
  </div>
</main>

<footer class="footer-panel glass-subtle">
  <p>21+ • Gamble responsibly • Support • Terms • Privacy</p>
</footer>