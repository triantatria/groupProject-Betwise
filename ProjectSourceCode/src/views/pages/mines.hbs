{{>nav}}

<div class="mines-page">

    <h1 class="mines-title soft-glow">MINES</h1>

    <div class="mines-container">

        <!-- LEFT PANEL -->
        <div class="mines-panel glass-card">

            <div class="mines-balance">Balance: ${{balance}}</div>

            <label class="mines-label">Bet Amount</label>
            <input 
                type="number"
                id="minesBetInput"
                class="mines-input"
                min="1"
                placeholder="Enter bet"
            />

            <label class="mines-label">Number of Mines</label>
            <input 
                type="number"
                id="minesCountInput"
                class="mines-input"
                min="1"
                max="24"
                placeholder="e.g. 3"
            />

            <button id="startMinesBtn" class="mines-btn">Start Game</button>
            <button id="cashoutBtn" class="mines-btn hidden">Cash Out</button>

            <div id="minesStatus" class="mines-status"></div>
        </div>

        <!-- RIGHT PANEL (GRID) -->
        <div class="mines-grid-panel glass-card">
            <div id="minesGrid"></div>
        </div>

    </div>
</div>

<script src="/resources/js/mines.js"></script>
