{{#each backgroundLayers}}
  <div class="bg-layer {{this}}"></div>
{{/each}}

{{> nav }}

<main class="blackjack-container fade-in">
  <div class="bj-side">
    
    <section class="bj-panel dealer-zone glass-card">
      <h2 class="bj-label">Dealer</h2>
      <div class="bj-cards" id="dealerCards"></div>
      <div class="bj-score" id="dealerScore">Score: —</div>
    </section>

    <section class="bj-panel player-zone glass-card">
      <h2 class="bj-label">You</h2>
      <div class="bj-cards" id="playerCards"></div>
      <div class="bj-score" id="playerScore">Score: —</div>
    </section>

  </div>

  <aside class="bj-main-controls glass-card">
    <div class="bet-inline">
      <label for="bjBet">Bet:</label>
      <input type="number" placeholder="0.00" class="bet-input" id="bjBet" min="0" step="1">
    </div>

    <button onclick="console.log("clicked")" class="play-btn" id="bjDealBtn">DEAL</button>

    <div class="bj-actions" id="bjActionButtons">
      <button class="play-btn secondary" id="bjHitBtn">Hit</button>
      <button class="play-btn secondary" id="bjStandBtn">Stand</button>
      <button class="play-btn secondary" id="bjDoubleBtn">Double</button>
    </div>

    <div class="bj-result" id="bjResultText"></div>
  </aside>
</main>

<footer class="footer-panel glass-subtle">
  <p>21+ • Gamble responsibly • Support • Terms • Privacy</p>
</footer>

<script src="resources/js/blackjack.js"></script>