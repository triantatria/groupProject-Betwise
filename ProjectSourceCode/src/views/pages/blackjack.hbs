{{>nav}}

<h2 class="blackjack-page-title section-title soft-glow">Blackjack</h2>

<main class="blackjack-page blackjack-container fade-in">
  <section class="bj-panel glass-card" id="dealerPanel">
    <h2 class="bj-title">Dealer</h2>
    <div class="bj-cards" id="dealerCards"></div>
    <div class="bj-score" id="dealerScore">Score: —</div>
  </section>

  <section class="bj-panel player-zone glass-card">
    <h2 class="bj-title">You</h2>
    <p class="bj-balance">Balance: ${{user.balance}}</p>

    <div class="bj-cards" id="playerCards"></div>
    <div class="bj-score" id="playerScore">Score: —</div>
  </section>


  <aside class="bj-controls glass-card">
    <div class="bet-row">
      <label for="bjBet">Bet:</label>
      <input type="number" id="bjBet" class="bet-input" placeholder="0.00" min="0" step="1">
    </div>

    <button id="bjDealBtn" class="play-btn">DEAL</button>

    <div class="bj-action-buttons" id="bjActionButtons">
      <button class="play-btn secondary" id="bjHitBtn">Hit</button>
      <button class="play-btn secondary" id="bjStandBtn">Stand</button>
      <button class="play-btn secondary" id="bjDoubleBtn">Double</button>
    </div>

    <div class="bj-result" id="bjResultText"></div>
  </aside>
</main>

<script src="/resources/js/blackjack.js"></script>