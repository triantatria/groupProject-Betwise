{{#each backgroundLayers}}
  <div class="bg-layer {{this}}"></div>
{{/each}}

<div class="center-stage login-entry">
  <h1 class="logo-title stay">{{titleText}}</h1>
  <p class="bw-slogan stay">{{subtitleText}}</p>

  <div class="login-center">
    {{#if error}}
      <div class="login-error" style="color:#ffb3c6;margin-bottom:12px;">
        {{message}}
      </div>
    {{/if}}

    <form class="login-form" action="/login" method="post">
      <div class="input-group">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" placeholder="Enter your username" required />
      </div>

      <div class="input-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" placeholder="Enter your password" required />
      </div>

      <button type="submit" class="enter-button">Log In</button>
    </form>

    <p class="login-footer-text">
      Donâ€™t have an account? <a href="/register">Sign up</a>
    </p>
  </div>
</div>

<div id="page-transition" class="page-transition"></div>