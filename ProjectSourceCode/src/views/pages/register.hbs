<div id="auth-wrapper" class="register-page fade-in">

  {{#each backgroundLayers}} 
    <div class="bg-layer {{this}}"></div> 
  {{/each}}

  <div class="auth-container">

    <h1 class="auth-logo">BETWISE</h1>
    <p class="auth-tagline">Flow With The Odds</p>

    <div class="auth-card">

      {{#if error}}
        <div class="auth-error">{{message}}</div>
      {{/if}}

      <form class="auth-form" action="/register" method="post">

        <div class="auth-input">
          <label>First Name</label>
          <input type="text" name="firstName" required>
        </div>

        <div class="auth-input">
          <label>Email</label>
          <input type="email" name="email" required>
        </div>

        <div class="auth-input">
          <label>Username</label>
          <input type="text" name="username" required>
        </div>

        <div class="auth-input">
          <label>Password</label>
          <input type="password" name="password" required>
        </div>

        <button class="auth-primary-btn" type="submit">REGISTER</button>

        <a href="/login" class="auth-secondary-btn" data-fade>
          Back to Login
        </a>

      </form>
    </div>

  </div>
</div>
