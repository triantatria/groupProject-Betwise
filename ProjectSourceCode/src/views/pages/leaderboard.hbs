{{#each backgroundLayers}}
  <div class="bg-layer {{this}}"></div>
{{/each}}

{{> nav }}

<section class="leaderboard-area fade-in">
  <h2 class="section-title">Global Leaderboard</h2>

  <div class="leaderboard-table glass-panel">

    <div class="leaderboard-header">
      <span class="col-rank">Rank</span>
      <span class="col-user">Player</span>
      <span class="col-score">Balance</span>
      <span class="col-status">Wins</span>
    </div>

    {{#each hello}}
    <div class="leaderboard-row hover-glow">

      <div class="rank-big rank-{{@index}}">
        #{{inc @index}}
      </div>

      <div class="user-cell">
        <span class="username">{{this.username}}</span>
      </div>

      <div class="score-cell">
        <span class="score-text">${{this.balance}}</span>

        <div class="score-bar">
          <div class="score-fill" style="width: {{progress}}%;"></div>
        </div>
      </div>

      <div class="status-badge tier-{{status}}">
        {{status}}
      </div>

    </div>
    {{/each}}
  </div>
</section>

<footer class="footer-panel glass-subtle">
  <p>21+ • Gamble responsibly • Support • Terms • Privacy</p>
</footer>
