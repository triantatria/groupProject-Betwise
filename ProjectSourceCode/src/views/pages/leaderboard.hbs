<div class="bg-layer neon-clouds"></div>
<div class="bg-layer caustics"></div>
<div class="bg-layer particles"></div>
<div class="bg-layer glow-ripple"></div>
<div class="bg-layer bloom-overlay"></div>
<div class="bg-layer neon-dots"></div>


<div class="center-stage login-entry" 
     style="min-height: calc(100vh - 100px); display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 0 20px;">
  <p class="bw-slogan stay" style="margin: 0 20px 2rem; font-size: 3rem; text-align: center;">
    Leaderboard
  </p>

  <div class="login-center" style="display: flex; flex-direction: column; gap: 2rem; width: 90%; max-width: 600px;">

    <div id="username-box"></div>
    {{#if users}}
      <div class="leaderboard-list glass-subtle" style="padding: 20px; border-radius: 12px; width: 100%;">
        {{#each users}}
            <strong>{{this.username}}</strong>
        {{/each}}
      </div>
    {{else}}
      <p style="opacity: 0.7; text-align: center;">No users found</p>
    {{/if}}

  </div>
</div>


<div id="page-transition" class="page-transition"></div>

<footer class="footer-panel glass-subtle">
  <p>21+ • Gamble responsibly • Support • Terms • Privacy</p>
</footer>
