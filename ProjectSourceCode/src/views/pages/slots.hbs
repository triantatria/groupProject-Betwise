{{#each backgroundLayers}}
  <div class="bg-layer {{this}}"></div>
{{/each}}

{{> nav }}

<main class="slots-container fade-in">
  <h2 class="section-title soft-glow">Slots</h2>

  {{> slotRules }}
  <p class="bj-balance">Balance: ${{user.balance}}</p>

  <div class="slot-machine glass-card deep">
    <div class="slot-window">
      <div class="reel" id="reel1">?</div>
      <div class="reel" id="reel2">?</div>
      <div class="reel" id="reel3">?</div>
    </div>

    <div class="slot-controls">
      <div class="bet-wrap">
        <label>Bet</label>
        <input type="number" id="slotBet" class="bet-input" min="1" step="1">
      </div>
      <button class="slot-spin-btn mono-neon" id="slotSpin">SPIN</button>
    </div>

    <div class="slot-result" id="slotResult"></div>
  </div>
</main>

<script>
  // Pass the server balance into the frontend
  window.initialBalance = {{balance}};
</script>

<script src="/resources/js/slots.js"></script>